<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="shop-header">
                                    <div class="shop-header__left">
                                        <div class="shop-header__left__message">
                                            Showing 1 to 9 of 15 (2 Pages)
                                        </div>
                                    </div>

                                    <div class="shop-header__right">

                                        <div class="single-select-block d-inline-block">
                                            <span class="select-title">Show:</span>
                                            <select>
                                                <option value="1">10</option>
                                                <option value="2">20</option>
                                                <option value="3">30</option>
                                                <option value="4">40</option>
                                            </select>
                                        </div>

                                        <div class="single-select-block d-inline-block">
                                            <span class="select-title">Sort By:</span>
                                            <select class="pr-0">
                                                <option value="1">Default</option>
                                                <option value="2">Name (A-Z)</option>
                                                <option value="3">Price (min - max)</option>
                                                <option value="4">Color</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="shop-page-content">
                                    <div class="row shop-product-wrap grid three-column">
                                        @foreach (var vehicle in Model.VehicleCategory.Vehicles)
                                        {
                                            <div class="col-12 col-lg-4 col-md-4 col-sm-6">
                                                <div class="single-grid-product grid-view-product">
                                                    <div class="single-grid-product__image">
                                                        @if (_0_Framework.App.Tools.GiveVehicleFunction(vehicle.Specifications) == "0")
                                                        {
                                                            <span class="new">New</span>
                                                        }
                                                        @if (vehicle.HasDiscount)
                                                        {
                                                            <div class="single-grid-product__label">
                                                                <span class="sale">-@vehicle.DiscountRate%</span>
                                                            </div>
                                                        }
                                                        <a asp-page="/Vehicle" asp-route-id="@vehicle.Slug">
                                                            <img src="@vehicle.Picture" class="img-fluid"
                                                             alt="@vehicle.PictureAlt" title="@vehicle.PictureTitle">
                                                        </a>
                                                    </div>
                                                    <div class="single-grid-product__content">
                                                        <div class="single-grid-product__category-rating">
                                                            <span class="category">
                                                                <a asp-page="/VehicleCategory" asp-route-id="@Model.VehicleCategory.Slug">@Model.VehicleCategory.Name</a>
                                                            </span>
                                                            <span class="rating">
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star-outline"></i>
                                                            </span>
                                                        </div>

                                                        <h2 class="single-grid-product__title">
                                                            <a asp-page="/Vehicle" asp-route-id="@vehicle.Slug">@vehicle.Specifications</a>
                                                        </h2>
                                                        <p class="single-grid-product__price">
                                                            @if (vehicle.HasDiscount)
                                                            {
                                                                <span class="discounted-price">@vehicle.PriceWithDiscount تومان</span>
                                                                <span class="main-price discounted">@vehicle.Price تومان</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="main-price">@vehicle.Price تومان</span>
                                                            }
                                                        </p>
                                                        @if (vehicle.HasDiscount)
                                                        {
                                                            <div class="product-countdown" data-countdown="@vehicle.DiscountRate"></div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="pagination-area">
                                    <div class="pagination-area__left">
                                        Showing 1 to 9 of 11 (2 Pages)
                                    </div>
                                    <div class="pagination-area__right">
                                        <ul class="pagination-section">
                                            <li>
                                                <a class="active" href="#">1</a>
                                            </li>
                                            <li>
                                                <a href="#">2</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
